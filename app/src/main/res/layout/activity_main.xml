<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="40dp"
        android:onClick="btnStartOnClick"
        android:text="@string/start" />

    <Button
        android:id="@+id/btnStop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/btnStart"
        android:layout_marginEnd="59dp"
        android:onClick="btnStopOnClick"
        android:text="@string/stop" />

    <TextView
        android:id="@+id/txtMsgsSent"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="Messages sent:"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView
        android:id="@+id/txtMsgsSentVal"
        android:layout_width="60dp"
        android:layout_height="25dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/txtMsgsSent"
        android:layout_marginEnd="25dp"
        android:text="0"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView
        android:id="@+id/txtReceiptsConfirmed"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_alignStart="@+id/txtMsgsSent"
        android:layout_below="@+id/txtMsgsSent"
        android:text="Receipts confirmed:"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView
        android:id="@+id/txtReceiptsConfirmedVal"
        android:layout_width="60dp"
        android:layout_height="25dp"
        android:layout_alignStart="@+id/txtMsgsSentVal"
        android:layout_below="@+id/txtMsgsSentVal"
        android:text="0"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView
        android:id="@+id/txtSendFailures"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_alignStart="@+id/txtMsgsSent"
        android:layout_below="@+id/txtReceiptsConfirmed"
        android:text="Send Failures:"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView
        android:id="@+id/txtSendFailuresVal"
        android:layout_width="60dp"
        android:layout_height="25dp"
        android:layout_alignStart="@+id/txtMsgsSentVal"
        android:layout_below="@+id/txtReceiptsConfirmedVal"
        android:text="0"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView
        android:id="@+id/txtMsgsReceived"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_alignStart="@+id/txtMsgsSent"
        android:layout_below="@+id/txtSendFailures"
        android:text="Messages received:"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView
        android:id="@+id/txtMsgsReceivedVal"
        android:layout_width="60dp"
        android:layout_height="25dp"
        android:layout_alignStart="@+id/txtMsgsSentVal"
        android:layout_below="@+id/txtSendFailuresVal"
        android:text="0"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView
        android:id="@+id/txtLastAccel"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_below="@+id/txtMsgsReceived"
        android:layout_alignStart="@+id/txtMsgsSent"
        android:text="Last Acceleration Reading:"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView
        android:id="@+id/txtLastAccelVal"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_below="@+id/txtLastAccel"
        android:layout_alignStart="@+id/txtMsgsSent"
        android:text="0"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@android:color/holo_blue_dark" />

    <TextView
        android:id="@+id/txtLastGyroscope"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_below="@+id/txtLastAccelVal"
        android:layout_alignStart="@+id/txtMsgsSent"
        android:text="Last Gyroscope Reading:"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView
        android:id="@+id/txtLastGyroscopeVal"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_below="@+id/txtLastGyroscope"
        android:layout_alignStart="@+id/txtMsgsSent"
        android:text="0"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@android:color/holo_blue_dark" />

    <TextView
        android:id="@+id/txtAccelerometer"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_below="@+id/txtLastGyroscopeVal"
        android:layout_alignStart="@+id/txtMsgsSent"
        android:layout_marginTop="25dp"
        android:text="Accelerometer"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />


    <TableLayout
        android:id="@+id/accelValues"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_alignStart="@+id/txtMsgsSent"
        android:layout_below="@+id/txtAccelerometer"
        android:stretchColumns="*">

        <TableRow

            android:id="@+id/accelRow"
            android:layout_width="fill_parent"
            android:layout_height="76dp">

            <TextView

                android:id="@+id/accelX"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X:"
                android:textSize="16dp" />

            <TextView

                android:id="@+id/accelY"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Y:"
                android:textSize="16dp" />

            <TextView

                android:id="@+id/accelZ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Z:"
                android:textSize="16dp" />

        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/txtGyroscope"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_below="@+id/accelValues"
        android:layout_alignStart="@+id/txtMsgsSent"
        android:layout_marginTop="25dp"
        android:text="Gyroscope"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />


    <TableLayout
        android:id="@+id/gyroValues"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtMsgsSent"
        android:layout_below="@+id/txtGyroscope"
        android:stretchColumns="*">

        <TableRow

            android:id="@+id/gyroRow"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView

                android:id="@+id/gyroX"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X:"
                android:textSize="16dp" />

            <TextView

                android:id="@+id/gyroY"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Y:"
                android:textSize="16dp" />

            <TextView

                android:id="@+id/gyroZ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Z:"
                android:textSize="16dp" />

        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/txtLocation"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_below="@+id/gyroValues"
        android:layout_alignStart="@+id/txtMsgsSent"
        android:layout_marginTop="25dp"
        android:text="Location"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />


    <TableLayout
        android:id="@+id/locValues"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_alignStart="@+id/txtMsgsSent"
        android:layout_below="@+id/txtLocation"
        android:stretchColumns="*">

        <TableRow

            android:id="@+id/loc_row"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView

                android:id="@+id/loc_long"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Longitude:"
                android:textSize="16dp" />

            <TextView

                android:id="@+id/loc_lat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Latitude:"
                android:textSize="16dp" />

        </TableRow>
    </TableLayout>


    <TextView
        android:id="@+id/txtLastMsgSent"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_below="@+id/locValues"
        android:layout_alignStart="@+id/txtMsgsSent"
        android:layout_marginTop="25dp"
        android:text="Last Message sent:"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView
        android:id="@+id/txtLastMsgSentVal"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_below="@+id/txtLastMsgSent"
        android:layout_alignStart="@+id/txtMsgsSent"
        android:autoSizeMaxTextSize="14sp"
        android:autoSizeMinTextSize="12sp"
        android:autoSizeStepGranularity="2sp"
        android:autoSizeTextType="uniform"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:text="{none}"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@android:color/holo_blue_dark" />

    <TextView
        android:id="@+id/txtLastMsgReceived"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_alignStart="@+id/txtMsgsSent"
        android:layout_below="@+id/txtLastMsgSentVal"
        android:text="Last Message received:"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView
        android:id="@+id/txtLastMsgReceivedVal"
        android:layout_width="316dp"
        android:layout_height="60dp"
        android:layout_alignStart="@+id/txtMsgsSent"
        android:layout_below="@+id/txtLastMsgReceived"
        android:gravity="center_vertical"
        android:text="{none}"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@android:color/holo_blue_dark"
        android:maxLines="1"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="12sp"
        android:autoSizeMaxTextSize="14sp"
        android:autoSizeStepGranularity="2sp"/>


</RelativeLayout>
